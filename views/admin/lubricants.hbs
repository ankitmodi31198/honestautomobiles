<!-- Page Content -->
<div style="margin-left:20%">

    <div class="my-new-header">
        <button id="openNav" class="w3-button w3-xlarge my-hamburger-btn" onclick="w3_open()">&#9776;</button>
        <span>
            <a href="/admin" class="navbar-logo-link">JCMS</a> 
        </span>
        <div class="navbar-userpart">
            <span class="navbar-userpart-username">Welcome, Admin | </span> <span><a href="">logout</a></span>
        </div>
    </div>
    
    <!-- breadcrumbs at top of the page -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="/admin/companies">Companies</a></li>
                <li class="breadcrumb-item"><a href="/admin/models">Models</a></li>
                <li class="breadcrumb-item"><a href="/admin/varients">Varients</a></li>
            <li class="breadcrumb-item" aria-current="page">Lubricants</li>
        </ol>
    </nav>    
    
    <form action="/admin/addLubricant/{{varient._id}}" method="post" class="my-form">
        <div class="my-form-heading">
            <h5>Add New Lubricant</h5>
        </div>
        <div class="container-95">                
            <div class="row my-form-row">
                <h6>Enter New Lubricant</h6>
                <div class="col-md-1">
                    <label for="lubricant">Lubricant</label>                                    
                </div>
                <div class="col-md-2">
                    <input type="text" name="lubricant" id="lubricant">                                
                </div>
                <div class="col-md-1">
                    <label for="price">Price</label>
                </div>
                <div class="col-md-2">
                    <input type="number" name="price" id="price">
                </div>
                <div class="col-md-1">
                    <label for="quantity">Quantity</label>
                </div>
                <div class="col-md-2">
                    <input type="number" name="quantity" id="quantity">
                </div>
                <div class="col-md-1">
                    <label for="labour">Labour</label>
                </div>
                <div class="col-md-2">
                    <input type="number" name="labour" id="labour">
                </div>
                <div class="col-md-1">
                    <label for="validity">Validity(Yr)</label>
                </div>
                <div class="col-md-2">
                    <input type="number" name="validity" id="validity" value="1">
                </div>                    
            </div>
            <div class="my-submit-div">
                <input type="submit" name="submit" id="submit" class="btn btn-secondary btn-sm" value="Add">
            </div>
        </div>                                   
    </form>
            
    <!-- dashboard -->
    <div class="my-dashboard">
        <div class="my-dashboard-header">
            <center>
                <h4>Lubricants</h4>
            </center>
        </div>
        <div class="my-dashboard-content mt-3">
            <div class="row">
                {{#each lubricant}}
                        <div class="col-md-4">		                        
                            <div class="my-dashboard-box-servings">
                                <div class="my-dashboard-box-header">
                                    <h6>{{this.name}}<i class="fa fa-puzzle-piece"></i></h6>
                                </div>
                                <div class="my-dashboard-box-content">
                                    <div class="row">
                                        <div class="col-md-12">
                                            Price : {{this.price}}
                                            <br>
                                            Quantity : {{this.quantity}}
                                            <br>
                                            Validity : {{this.validity}}
                                        </div>                                        
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <button onclick="editLubricant{{this._id}}()" class="btn btn-primary btn-sm">Edit</button>
                                        </div>
                                        <div class="col-md-6">                                                                                            
                                            <form action="/admin/deleteLubricant/{{this._id}}" method="post">                                                    
                                                {{!-- <input type="hidden" name="lubricant_id" value="<%= vpd.getLubricantId() %>">
                                                <input type="hidden" name="vid1" id="vid1" value="<%=vid%>"> --}}
                                                <input type="submit" name="submit" value="Delete" class="btn btn-danger btn-sm" onclick="alertUserDelete{{this._id}}()"> 
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>                                                                
                        </div>  
                                <script>
                            function alertUserDelete{{this._id}}() {
                                alert("You are deleting your "+{{this.name}}+" !");
                            }
                        </script>                          
                {{/each}}                                                         
            </div>
        </div>
    </div>
</div>