<header>
        <div class="w3-sidebar w3-bar-block w3-card w3-animate-left" style="display:none" id="mySidebar">
            <button class="w3-bar-item w3-button w3-large"
            onclick="w3_close()">Close &times;</button>
             <h3 class="w3-bar-item">Menu</h3>
        <a href="/staff/dashboard" class="w3-bar-item w3-button">Dashboard</a>
	<a href="/staff/search" class="w3-bar-item w3-button">Search Customer</a>
	<a href="/staff/arrivalCars" class="w3-bar-item w3-button">Arrival Cars</a>
	<a href="/staff/pendingCars" class="w3-bar-item w3-button">Pending Cars</a>
	<a href="/staff/repairedCars" class="w3-bar-item w3-button">Repaired Cars</a>    
    </header>
<main>
    <div class="my-new-header">
            <button id="openNav" class="w3-button w3-xlarge my-hamburger-btn" onclick="w3_open()">&#9776;</button>
            <span>
                <a href="/staff/dashboard" class="navbar-logo-link">JCMS</a> 
            </span>
            <div class="navbar-userpart">
                <span class="navbar-userpart-username">Welcome, Staff | </span> <span><a href="">logout</a></span>
            </div>
        </div>
         <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/staff/dashboard">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="/staff/pendingCars">Pending Cars List</a></li>
                <li class="breadcrumb-item active" aria-current="page">View Status </li>
            </ol>
        </nav>
<div class="row mt-3">
        	<div class="col-md"></div>
        	<div class="col-md-2">
        		<button onclick="pendingClicked()" class="btn my-btn btn-md" style="color:white;">Pending</button>
        	</div>
        	<div class="col-md-2">
        		<button onclick="completedClicked()" class="btn my-btn btn-md" style="color:white;">Completed</button>
        	</div>
        	<div class="col-md"></div>
        </div>
        	<div  id="pendingContent" class="container-95">
              <div class="row">          		
        			<div class="col-md-4">
        			<h5>parts remaining</h5>                        
                        <table class="table table-bordered table-striped">
                            <tr>
                                <th>Parts</th>
                            </tr>
                            {{#each pendingParts}}
                            <tr>
                                <td>
                                   
                                    <label for="part{{this.partId}}" class="checklist-label">{{this.name}}</label>
                                </td>
                            </tr>
                           {{/each}}                          
                        </table>
                    </div>
                    <div class="col-md-4">
                        <h5>Services remaining</h5>
                        <table class="table table-bordered table-striped">
                            <tr>
                                <th>Services</th>
                            </tr>
                            {{#each pendingServices}}
                            <!-- Loop for services -->
                            <tr>
                                <td>
                                        
                                    <label for="service{{this.serviceId}}" class="checklist-label">{{this.name}}</label>
                                </td>
                            </tr>
                            {{/each}}
                        </table>
                    </div>
                    <div class="col-md-4">
                        <h5>Lubricants remaining</h5>
                        <table class="table table-bordered table-striped">
                            <tr>
                                <th>Lubricants</th>
                            </tr>
                            {{#each pendingLubricants}}
                            <!-- Loop for Lubricants -->
                            <tr>
                                <td>
                                   
                                    <label for="lubricant{{this.lubricantId}}" class="checklist-label">{{this.name}}</label>
                                </td>
                            </tr>
                            {{/each}}
                           </table>
                      </div>  
                 </div>
             </div>
             <div id="completedContent" class="container-95">
                 <div class="row">          		
        			<div class="col-md-4">
        			<h5>parts Completed</h5>                        
                        <table class="table table-bordered table-striped">
                            <tr>
                                <th>Parts</th>
                            </tr>
                            {{#each completedParts}}
                            <tr>
                                <td>
                                     
                                    <label for="part{{this.partId}}" class="checklist-label">{{this.name}}</label>
                                </td>
                            </tr>
                           {{/each}}                          
                        </table>
                    </div>
                    <div class="col-md-4">
                        <h5>Services Completed</h5>
                        <table class="table table-bordered table-striped">
                            <tr>
                                <th>Services</th>
                            </tr>
                            {{#each completedServices}}
                            <!-- Loop for services -->
                            <tr>
                                <td>
                                       
                                    <label for="service{{this.serviceId}}" class="checklist-label">{{this.name}}</label>
                                </td>
                            </tr>
                            {{/each}}
                        </table>
                    </div>
                    <div class="col-md-4">
                        <h5>Lubricants Completed</h5>
                        <table class="table table-bordered table-striped">
                            <tr>
                                <th>Lubricants</th>
                            </tr>
                            {{#each completedLubricants}}
                            <!-- Loop for Lubricants -->
                            <tr>
                                <td>
                                    
                                    <label for="lubricant{{this.lubricantId}}" class="checklist-label">{{this.name}}</label>
                                </td>
                            </tr>
                            {{/each}}
                           </table>
                      </div> 
                    
                 </div>                 
                 
             </div>
             <div class="row">
                 <div class="col-md"></div>
                 <div class="col-md-2">
                     <a href="/staff/pendingCars" class="btn btn-secondary btn-md">Back</a>
                 </div>
                 <div class="col-md"></div>
              </div>      
        </main>
    
    <script>
    	var pc = document.getElementById("pendingContent");
    	var cc = document.getElementById("completedContent");
    	pc.style.display = "block";
    	cc.style.display = "none";
    	function pendingClicked() {
    		pc.style.display = "block";
    		cc.style.display = "none";
    	}
    	function completedClicked() {
    		pc.style.display = "none";
    		cc.style.display = "block";
    	}
    </script>