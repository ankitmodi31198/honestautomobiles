<header>
        <div class="w3-sidebar w3-bar-block w3-card w3-animate-left" style="display:none" id="mySidebar">
            <button class="w3-bar-item w3-button w3-large"
            onclick="w3_close()">Close &times;</button>
             <h3 class="w3-bar-item">Menu</h3>
        <a href="/staff/dashboard" class="w3-bar-item w3-button">Dashboard</a>
	<a href="/staff/search" class="w3-bar-item w3-button">Search Customer</a>
	<a href="/staff/arrivalCars" class="w3-bar-item w3-button">Arrival Cars</a>
	<a href="/staff/pendingCars" class="w3-bar-item w3-button">Pending Cars</a>
	<a href="/staff/repairedCars" class="w3-bar-item w3-button">Repaired Cars</a>  
    <a href="/staff/jobcardList" class="w3-bar-item w3-button">JobcardList </a>
	<a href="/staff/closedCars" class="w3-bar-item w3-button">Closed Cars</a>         
    </header>
<!-- Page Content -->
    <div>

         <div class="my-new-header">
            <button id="openNav" class="w3-button w3-xlarge my-hamburger-btn" onclick="w3_open()">&#9776;</button>
            <span>
                <a href="/staff/dashboard" class="navbar-logo-link">JCMS</a> 
            </span>
            <div class="navbar-userpart">
                <span class="navbar-userpart-username">Welcome, Staff | </span> <span><a href="/staff/logout">logout</a></span>
            </div>
        </div>

       <!-- breadcrumbs at top of the page -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/staff/dashboard">Dashboard</a></li>
                <li class="breadcrumb-item active" aria-current="page">Repaired Cars</li>
            </ol>
        </nav>    
        
        <!-- dashboard -->
        <div class="my-dashboard">
            <div class="my-dashboard-header">
                <center>
                    <h4>JobCard Cars list</h4>
                </center>
            </div>
            <div class="container mt-5">
	   		<table id="data-table-simple-1" class="table">
			   	<thead style="text-align: center;">
			   		<tr>
			   			<th>Vehicle No</th>
			   			<th>JobCard No</th>			   				
			   			<th>Arrival Date</th>
			   			<th>Customer Name</th>
			   			<th>Company</th>                        
			   			<th>Delivery Date</th>
			   			<th>Action</th>
			   		</tr>
			   	</thead>
			   	<tbody style="font-size: 12px; text-align: center;">
                    {{#each customers}}
                        <tr>
                        <td>{{this.vehicleInfo.vehicleNumber}}</td>
                        <td>{{this.jobcardInfo.jobcardNumber}}</td>
                        <td>{{this.jobcardInfo.arrival.date}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.vehicleInfo.company.name}} {{this.vehicleInfo.model.name}}</td>                                           
                        <td>{{this.jobcardInfo.delivery.date}}</td>
                        <td><a href="/staff/JobcardView/{{this._id}}">View</a></td>
                        </tr>	 
                    {{/each}}
			   	</tbody>
	   		</table>
		</div>
            
            <div class="my-dashboard-content mt-3">
                <div class="row">
          
                </div>
            </div>
        </div>